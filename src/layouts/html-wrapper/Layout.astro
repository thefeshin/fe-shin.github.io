---
import './styles.scss';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
    <meta name="description" content="Full Stack Software Engineer, experienced in SaaS, Ecommerce, and the Automotive industry. Specializes in accessibility, performance, and user experience.">
    <meta name="keywords" content="Full Stack Software Engineer, Farid Shokri, SaaS, Ecommerce, Automotive, Web Development, Accessibility, Performance, User Experience, JavaScript, React.js, Node.js, Python, AWS, Cloud">
    <meta name="author" content="Farid Shokri">
    <meta name="robots" content="index, follow">

    <!-- Open Graph Meta Tags (for social media sharing) -->
    <meta property="og:title" content="Farid Shokri | Full Stack Software Engineer">
    <meta property="og:description" content="Full Stack Software Engineer with 5 years of experience in SaaS, Ecommerce, and the Automotive industry. Passionate about accessibility, performance, and user experience on web applications.">
    <meta property="og:image" content="/website-preview.png">
    <meta property="og:url" content="https://faridshokri.com">
    <meta property="og:type" content="website">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Farid Shokri | Full Stack Software Engineer">
    <meta name="twitter:description" content="Full Stack Software Engineer with 5 years of experience in SaaS, Ecommerce, and the Automotive industry. Specializes in accessibility, performance, and user experience on web applications.">
    <meta name="twitter:image" content="/website-preview.png">
    <meta name="twitter:site" content="@fe_shiin">

    <!-- Link Tags -->
    <link rel="canonical" href="https://faridshokri.com">

		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#13151a">

    <!-- Schema.org Markup for SEO -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Farid Shokri",
      "jobTitle": "Full Stack Software Engineer",
      "email": "farid_shokri@outlook.com",
      "url": "https://faridshokri.com",
      "sameAs": [
        "https://www.linkedin.com/in/farid-shokri/",
        "https://twitter.com/thefeshin/",
        "https://www.instagram.com/thefeshin/"
      ],
      "description": "Full Stack Software Engineer with 5 years of experience in SaaS, Ecommerce, and the Automotive industry. Specializes in accessibility, performance, and user experience on web applications.",
      "skills": [
        "JavaScript", "TypeScript", "React.js", "Next.js", "Node.js", "Express.js", 
        "Python", "FastAPI", "PostgreSQL", "AWS CDK", "Amplify", "AppSync", 
        "DynamoDB", "Cognito", "Lambda", "CloudFormation", "Redux", "React Query", 
        "Nx", "Jest", "Cypress", "Playwright", "HTML", "CSS", "SASS", "jQuery", 
        "Storybook", "Git", "CI/CD", "Scrum"
      ]
    }
    </script>
	</head>
	<body>
		<slot />
	</body>
</html>
